{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true, 
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 